@model LibraryDomain.Model.Book
@{
    ViewData["Title"] = "Book Landing Page";
}

<!-- Minimal landing page with Bootstrap -->
<div class="container-fluid p-0" style="background: #f5f5f5; min-height:100vh; display:flex; align-items:center; justify-content:center;">
    <div class="card shadow-lg" style="max-width: 900px; width: 100%; margin: 20px;">
        <div class="row g-0">
            <!-- Book Cover -->
            <div class="col-md-4" style="background-color: #eee; display:flex; align-items:center; justify-content:center;">
                @if (!string.IsNullOrEmpty(Model.BookCoverUrl))
                {
                    <img src="@Model.BookCoverUrl" class="img-fluid rounded-start" alt="Book Cover">
                }
                else
                {
                    <div class="text-muted text-center p-3">No Cover Available</div>
                }
            </div>

            <!-- Book Info -->
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <p class="text-muted mb-2"><strong>ISBN:</strong> @Model.Isbn</p>
                    <p class="text-muted mb-2"><strong>Publisher:</strong> @Model.Publisher.PublisherName</p>

                    <p class="mb-2">
                        <strong>Authors:</strong>
                        @foreach (var author in Model.BookAuthors)
                        {
                            @($"{author.Author.LastName} {author.Author.FirstName}")
                        
                            <br />
                        }
                    </p>

                    <p class="mb-3">
                        <strong>Genres:</strong>
                        @foreach (var genre in Model.BookGenres)
                        {
                            @genre.Genre.GenreName
                        
                            <br />
                        }
                    </p>

                    <hr />

                    <p class="fst-italic text-secondary">
                        "A great book is a friend who never lets you down. Dive into its world and let your imagination soar."
                    </p>

                    <a asp-action="Index" class="btn btn-primary mt-3">Back to Library</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Floating Contact Button -->
<div style="position:fixed; bottom:20px; right:20px;">
    <a href="mailto:contact@library.com" class="btn btn-success btn-lg">Contact Us</a>
</div>
