@model LibraryDomain.Model.Book

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">

    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">@Model.Title</h1>
        <p class="text-muted">A story worth exploring—discover the details below.</p>
    </div>

    <div class="row justify-content-center">

        <!-- Book Cover -->
        <div class="col-md-4 text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.BookCoverUrl))
            {
                <img src="@Model.BookCoverUrl" class="img-fluid rounded shadow-sm"
                     style="max-height: 350px; object-fit: cover;" />
            }
            else
            {
                <div class="bg-light border rounded d-flex align-items-center justify-content-center"
                     style="height: 350px;">
                    <span class="text-muted">No Cover Available</span>
                </div>
            }
        </div>

        <!-- Details -->
        <div class="col-md-6">

            <h4 class="mb-3">Book Information</h4>

            <div class="mb-2">
                <strong>ISBN:</strong> @Model.Isbn
            </div>

            <div class="mb-2">
                <strong>Publisher:</strong> @Model.Publisher.PublisherName
            </div>

            <div class="mb-2">
                <strong>Authors:</strong>
                <div>
                    @foreach (var author in Model.BookAuthors)
                    {
                        var fullName = author.Author.LastName + " " + author.Author.FirstName;
                        <span class="badge bg-secondary me-1">@fullName</span>
                    }
                </div>
            </div>

            <div class="mb-2">
                <strong>Genres:</strong>
                <div>
                    @foreach (var genre in Model.BookGenres)
                    {
                        <span class="badge bg-primary me-1">@genre.Genre.GenreName</span>
                    }
                </div>
            </div>

        </div>
    </div>

    <hr class="my-4" />

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
        <a asp-action="Comments_Admin" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Read Comments</a>
        <a asp-action="Index_Admin" class="btn btn-outline-dark">Back to List</a>
    </div>

</div>
